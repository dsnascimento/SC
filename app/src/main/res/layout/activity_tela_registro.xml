<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundsc">

    <ImageView
        android:id="@+id/logoSCTR"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_marginTop="10mm"

        android:background="@drawable/logosc"

        android:layout_gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblNomeCompletoTR"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Nome Completo"

            android:textColor="@color/Preto"/>

        <EditText
            android:id="@+id/txtNomeCompletoTR"
            android:layout_width="300dp"
            android:layout_height="30dp"

            android:layout_marginTop="10dp"

            android:layout_gravity="center_horizontal|center_vertical"

            android:inputType="text"
            android:hint="Digite seu Nome Completo"

            android:textColor="@color/Preto"
            android:background="@color/Branco" />

        <TextView
            android:id="@+id/lblEmailTR"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Email"

            android:textColor="@color/Preto"/>

        <EditText
            android:id="@+id/txtEmailTR"
            android:layout_width="300dp"
            android:layout_height="30dp"

            android:layout_marginTop="10dp"

            android:layout_gravity="center_horizontal|center_vertical"

            android:inputType="textEmailAddress"
            android:hint="Digite@seuEmail"

            android:textColor="@color/Preto"
            android:background="@color/Branco"/>

        <TextView
            android:id="@+id/lblSenhaTR"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Senha"

            android:textColor="@color/Preto"/>

        <EditText
            android:id="@+id/txtSenhaTR"
            android:layout_width="300dp"
            android:layout_height="30dp"

            android:layout_marginTop="10dp"

            android:layout_gravity="center_horizontal|center_vertical"

            android:inputType="number"
            android:hint="Digite Sua Senha"

            android:textColor="@color/Preto"
            android:background="@color/Branco"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBotoesTR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSalvarTR"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|center_horizontal"

            android:text="Salvar"
            android:textColor="@color/Branco"
            android:background="@color/Azul" />

        <Button
            android:id="@+id/btnVoltarTR"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|center_horizontal"

            android:layout_marginTop="15dp"

            android:text="VOLTAR"
            android:textColor="@color/Branco"
            android:background="@color/Vermelho" />

    </LinearLayout>

</LinearLayout>